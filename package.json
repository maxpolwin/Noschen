{
  "name": "noschen",
  "version": "1.0.0",
  "description": "AI-Powered Research Note-Taking App",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "tsc -p tsconfig.main.json && electron .",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "tsc && vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "start": "electron .",
    "package": "npm run build && electron-builder",
    "download-model": "node scripts/download-model.js",
    "generate-icon": "bash scripts/generate-icon.sh"
  },
  "overrides": {
    "tar": "^7.5.6",
    "glob": "^10.0.0"
  },
  "keywords": [
    "note-taking",
    "research",
    "ai",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "@types/node": "^22.10.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.0",
    "electron": "^35.7.5",
    "electron-builder": "^24.13.3",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.5",
    "typescript": "^5.7.2",
    "vite": "^6.0.0"
  },
  "dependencies": {
    "@tiptap/extension-heading": "^2.11.0",
    "@tiptap/extension-highlight": "^2.11.0",
    "@tiptap/extension-placeholder": "^2.11.0",
    "@tiptap/pm": "^2.11.0",
    "@tiptap/react": "^2.11.0",
    "@tiptap/starter-kit": "^2.11.0",
    "lodash": "^4.17.20",
    "lucide-react": "^0.469.0",
    "node-llama-cpp": "^3.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "uuid": "^11.0.0"
  },
  "build": {
    "appId": "com.noschen.app",
    "productName": "Noschen",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "models/**/*"
    ],
    "extraResources": [
      {
        "from": "models",
        "to": "models",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asarUnpack": [
      "models/**/*",
      "node_modules/node-llama-cpp/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "extendInfo": {
        "CFBundleName": "Noschen",
        "CFBundleDisplayName": "Noschen"
      }
    },
    "dmg": {
      "title": "Noschen",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office"
    }
  }
}
